<link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap@4.0.0/dist/css/bootstrap.min.css" integrity="sha384-Gn5384xqQ1aoWXA+058RXPxPg6fy4IWvTNh0E263XmFcJlSAwiGgFAW/dAiS6JXm" crossorigin="anonymous">

<h1>New Blueprint Formx</h1>

<%= form_with(url: blueprint_add_path) do |f| %>
  <div class="field">
    <%= f.label :name %>
    <%= f.text_field :titolo , class: "form-control" , :required => true%>
  </div>

  <div class="field">
    <%= f.label :category_id %>
    <%= f.collection_select :category_id, Category.all, :name,  :name ,   {:include_blank => 'Select Brand...'},    html_options = {class: "form-control" , required: true } %>

  </div>

  <div class="field">
    <%= f.label :brand_id %>
    <%= f.collection_select :brand_id, Brand.all,  :name,  :name ,  {:include_blank => 'Select Brand...'},    html_options = {class: "form-control" , required: true } %>
  </div>

  <div class="field">
    <%= f.label :expansion_id %>
    <%= f.collection_select :expansion_id, Expansion.all,   :name,  :name , {:include_blank => 'Select Expansion...'},    html_options = {class: "form-control" , required: true } %>
  </div>
  <div class="field" style="margin-top:10px">
  <%= f.submit "Create Blueprint" , class: 'btn btn-primary', style: "width:250px !important" %>
  </div>
<% end %>
