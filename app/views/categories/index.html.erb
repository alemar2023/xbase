<style>
    .users-list {
        list-style-type: none;
        padding: 0;
    }

    .user-item {
        border: 1px solid #ccc;
        margin-bottom: 10px;
        padding: 10px;
    }

    .user-username {
        font-weight: bold;
    }

    .user-email {
        color: #666;
    }
</style>

